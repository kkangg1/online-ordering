<nav class="navbar navbar-expand-sm navbar-dark  fixed-top bg-dark" role="navigation">
    <a class="navbar-brand" href="home">PIZZA</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item"><a class="nav-link" href="home">{{user.name}}</a></li>
            <li class="nav-item"><a class="nav-link" href="menu">Menu</a></li>
            <li class="nav-item"><a class="nav-link" href="order">Order</a></li>
        </ul>
        <a class="nav-link" href="cart"><i class="fas fa-shopping-cart" id="nav">
                <div class="d-inline ml-1" id="cartCount">{{cartCount}}</div>
            </i></a>
        <a class="nav-link" href="logout" id="nav"><i class="fas fa-sign-out-alt"></i> Log Out</a>
    </div>
</nav>
<main role="main" class="container">
    <div class="totalPrice">
        <div class="pull-left" id="totalPrice">Total price is ${{totalPrice}}</div>
        <div class="pull-right"><button type="button" style="" class="btn btn-link" onclick="">Please Order</button>
        </div>
    </div>


    <div id="cart">
        {{#each cart}}
        <div id="delet{{this.cart_id}}">
            <div class="jumbotron aa">
                <h5 class="card-title">{{this.name}}</h5>
                <p>{{this.customdetail}}</p>
                <label>quantity</label>
                <input style="width: 40px;" oninput="timmer({{this.cart_id}})" type="number" name="{{this.cart_id}}"
                    value="{{this.quantity}}" id="{{this.cart_id}}"></input>
                <label style="pull: right">${{this.price}} </label>
                <button type="button" class="btn btn-link" onclick="removeCart({{this.cart_id}})"><i
                        class="fas fa-cart-plus"></i>Remove</button>
                <div>
                    <label>Subtotal</label>
                    <label id="subTotal{{this.cart_id}}">${{this.subTotal}}</label>
                </div>
            </div>
        </div>
        {{/each}}
        <button type="button" class="btn btn-link" onclick="removeAllCart()"><i class="fas fa-cart-plus"></i>Remove
            All</button>
    <div>
</main>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/javascripts/active.js"></script>